{
	"name": "hfo-gen87-x3",
	"version": "87.3.0",
	"description": "HFO Gen87.X3 - Pre-configured AI Workspace with Enforcement",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"dev": "tsx watch src/index.ts",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:changed": "vitest run --changed",
		"test:bucket:contracts": "vitest run sandbox/src/contracts/",
		"test:bucket:adapters": "vitest run sandbox/src/adapters/",
		"test:bucket:smoothers": "vitest run sandbox/src/smoothers/",
		"test:bucket:phase1": "vitest run sandbox/src/phase1-w3c-cursor/",
		"test:bucket:gesture": "vitest run sandbox/src/gesture/ sandbox/src/arming/",
		"test:bucket:status": "tsx scripts/test-bucket-status.ts",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit",
		"prepare": "husky",
		"enforce": "tsx scripts/enforce-architecture.ts ./sandbox",
		"enforce:strict": "tsx scripts/enforce-architecture.ts ./sandbox --strict",
		"enforce:json": "tsx scripts/enforce-architecture.ts ./sandbox --json",
		"audit:trl": "grep -r -l 'z.object' sandbox --include='*.ts' | xargs grep -L '@source\\|@see\\|TRL\\|W3C\\|CNCF'",
		"orchestration:test": "tsx src/orchestration/test-orchestration.ts",
		"temporal:worker": "tsx src/orchestration/temporal.worker.ts",
		"temporal:client": "tsx src/orchestration/temporal.client.ts",
		"crewai:test": "python src/orchestration/crewai_hive.py"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@commitlint/cli": "^19.0.0",
		"@commitlint/config-conventional": "^19.0.0",
		"@playwright/test": "^1.57.0",
		"@types/node": "^22.0.0",
		"@vitest/coverage-v8": "^2.1.0",
		"fast-check": "^3.23.2",
		"husky": "^9.0.0",
		"tsx": "^4.19.0",
		"typescript": "^5.6.0",
		"vitest": "^2.1.0"
	},
	"dependencies": {
		"@langchain/core": "^1.1.8",
		"@langchain/langgraph": "^1.0.7",
		"@langchain/openai": "^1.2.0",
		"@mediapipe/tasks-vision": "^0.10.22-rc.20250304",
		"@nats-io/jetstream": "^3.3.0",
		"@nats-io/kv": "^3.3.0",
		"@nats-io/nats-core": "^3.3.0",
		"@nats-io/obj": "^3.3.0",
		"@temporalio/activity": "^1.14.0",
		"@temporalio/client": "^1.14.0",
		"@temporalio/worker": "^1.14.0",
		"@temporalio/workflow": "^1.14.0",
		"dotenv": "^17.2.3",
		"golden-layout": "^2.6.0",
		"openai": "^6.15.0",
		"xstate": "^5.25.0",
		"zod": "^3.25.76"
	}
}
