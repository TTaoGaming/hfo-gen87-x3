{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noThenProperty": "off"
			},
			"complexity": {
				"noForEach": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always"
		}
	},
	"files": {
		"maxSize": 3145728,
		"ignore": [
			"node_modules/**",
			"dist/**",
			"coverage/**",
			"playwright-report/**",
			"test-results/**",
			"*.d.ts",
			"cold/**",
			"hot/bronze/quarantine/**",
			".stryker-tmp/**",
			"demos/lib/**"
		]
	}
}
