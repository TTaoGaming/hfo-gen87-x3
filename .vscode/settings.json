{
	// ═══════════════════════════════════════════════════════════════
	// GITHUB COPILOT - AUTO APPROVE ALL TOOLS
	// ═══════════════════════════════════════════════════════════════
	"chat.tools.autoApprove": true,
	"github.copilot.chat.agent.autoApprove": true,
	"github.copilot.chat.tools.autoApprove": true,
	"chat.agent.autoApprove": true,
	"chat.mcp.autoApprove": true,
	"github.copilot.chat.runCommand.enabled": true,

	// ═══════════════════════════════════════════════════════════════
	// MCP SERVERS (WORKSPACE-ONLY ADDITIONS)
	// ═══════════════════════════════════════════════════════════════
	// 
	// Global servers (from %APPDATA%\Code\User\mcp.json):
	// - github: Repository management via api.githubcopilot.com
	// - playwright: Browser automation
	// - context7: Library documentation
	// - sequentialthinking: Chain-of-thought reasoning
	// - memory: Knowledge graph persistence
	//
	// Workspace-specific additions below:
	//
	"mcp": {
		"servers": {
			"filesystem": {
				"command": "npx",
				"args": ["-y", "@modelcontextprotocol/server-filesystem", "C:/Dev/active"]
			}
		}
	},

	// ═══════════════════════════════════════════════════════════════
	// EDITOR
	// ═══════════════════════════════════════════════════════════════
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "biomejs.biome",

	// Reduce code action overhead (fixes stuck Biome LSP)
	"editor.codeActionsOnSave": {
		"quickfix.biome": "explicit",
		"source.organizeImports.biome": "explicit"
	},
	"editor.lightbulb.enabled": "off",
	"typescript.suggest.autoImports": false,
	"files.associations": {
		"*.jsonl": "json",
		"llms.txt": "markdown"
	},

	// ═══════════════════════════════════════════════════════════════
	// SEARCH
	// ═══════════════════════════════════════════════════════════════
	"search.exclude": {
		"**/node_modules": true,
		"**/dist": true,
		"**/.history": true
	}
}
